[color "diff"]
   meta = yellow
   frag = magenta
   old = red
   new = green

[color "branch"]
   current = yellow reverse
   local = yellow
   remote = green

[color "status"]
   added = yellow
   changed = green
   untracked = cyan

[pretty]
   # Custom log output
   custom = "%C(yellow)%h%C(auto)%d %C(dim white)%ad %Creset%s %C(blue)[%an]"
   #                    │         │               │          │     author ┘
   #                    │         │               │          └─ message
   #                    │         │               └─ date
   #                    │         └─ decorations (branch, heads or tags)
   #                    └─ hash (abbreviated)
